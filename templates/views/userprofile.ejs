<div class="row my-3">
  <% for(var i=0; i < notes.length; i++) { %>
    <div class="col-md-4">

     
        <div class="card my-3" style="width: 18rem;">
          
            <div class="card-body">
              <a href="/sharedwith/<%= notes[i]._id %>"><span style='font-size:40px; ' class="d-inline">&#8594;</span></a>
              
               
                <h5 class="card-title"> <%= notes[i].notetitle %>             </h5>
                
                <p class="card-text"><%= notes[i].notedescription %></p>
                <!-- Update -->
                <a href="/userprofile/<%= notes[i]._id %>" class="btn btn-warning btn-sm">Edit</a>
                
                   <!-- Delete -->
                
                <form method="POST" class="d-inline" action="/delete/<%= notes[i]._id %>">
                  <input type="submit" class="btn btn-primary btn-sm " value="Delete">
                </form>
                
            </div>
           
        </div>
        
       
       

       
        
    </div>
    <% } %>
   
</div>
