<div class="container">
    <h1>Welcome <span>hello <%= name %></span>   </h1>
<span>   <a href="/logout">Logout</a></span>
<form  action = "/userprofile/" method="POST">
    <form method="POST" action="/userprofile">
                
        <div class="mb-3">
          <label for="title" class="form-label" style="font-family: cursive;font-weight: bold;">Enter Note Title</label>
          <input type="text" name="notetitle" class="form-control" id="title" placeholder="Enter Note Title">
          
        </div>
        <div class="mb-3">
          <label for="description" class="form-label" style="font-family: cursive;font-weight: bold;">Enter Note Description</label>
          <input type="text" name="notedesc" class="form-control" id="description" placeholder="Enter Note Description">
        </div>
        
        <button type="submit" class="btn warning">Add Note</button>
    </form>

